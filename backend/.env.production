# Railway Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DB_PATH=./database/helpdesk.sqlite

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-railway
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# CORS Configuration
CORS_ORIGIN=https://mini-helpdesk.vercel.app

# API Configuration
API_PREFIX=/api
TRUST_PROXY=true

# Logging for production
LOG_LEVEL=info

# Security
HELMET_ENABLED=true